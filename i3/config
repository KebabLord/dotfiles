# >nautilus helper-chan MOD+Z
exec --no-startup-id nautilus ~/Pictures
for_window [class="Nautilus"] move scratchpad
for_window [class="Nautilus"] move position center
bindsym $mod+z [class="Nautilus"] scratchpad show

for_window [window_type="DIALOG"] focus
for_window [window_type="DIALOG"] move position center
for_window [window_type="DIALOG"] sticky enable

exec --no-startup-id nm-applet
